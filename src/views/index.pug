extends ./template/template

block main
	section.hero.is-success
		.hero-body
			.container
				h1.title Welcome to Recify homepage
				h2.subtitle Here you can view the list of registered shows that you assisted.
	//- actions
	section.section.panel-create#panel-create
		.container
			.tile.is-ancestor.columns
				//- date
				.tile.is-3.is-parent.column.is-2
					article.tile.is-child.notification.date
						h3.title.is-3 Select date						
						.field
							.control.has-icons-left
								input.input(type="date", id="recital-date", placeholder="")
								span.icon.is-left
									i.fas.fa-calendar
				//- band
				.tile.is-3.is-parent.column.is-2
					article.tile.is-child.notification.band
						h3.title.is-3 Band...
						.field
							.control
								.select
									select#band-dropdown
				//- place
				.tile.is-3.is-parent.column.is-2
					article.tile.is-child.notification.place
						h3.title.is-3 Place...
						.field
							.control
								.select
									select#place-dropdown
				//- ticket
				.tile.is-3.is-parent.column.is-2
					article.tile.is-child.notification.ticket
						h3.title.is-3 Have any ticket?						
						.field
							p.control
								.b-checkbox.is-primary
									input(type="checkbox", id="checkbox", class="styled")
									label(for="checkbox") Yes, I have
			button.button.is-fullwidth.is-primary Create!
	//- table
	section.section
		.container.recital-table-container
			table.table.is-hoverable.is-fullwidth#table
				thead
					tr
						th #
						th Date
						th Band
						th Place
						th Ticket
						th Delete
				tbody#recital-data
		include ./blocks/loader
	include ./blocks/modal
